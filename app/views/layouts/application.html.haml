      %section.right
        %ul
          - if current_user.present?
            %li
              %a{href: destroy_user_session_path} â€Sign Out ğŸ‘©â€ğŸ’»
            %li
              %a.nes-btn.is-success{href: overlay_index_url(channel: current_user&.username), target: :_blank}
                Open Overlays
          - else
            %li
              %a#signin.nes-btn.is-primary{href: new_user_session_path}
                %i.nes-icon.twitch
